---
import H2 from "@/components/ui/typography/H2.astro"
import H3 from "@/components/ui/typography/H3.astro"
import { experiences } from "@/lib/experiences"
import { icons } from "@/lib/icons"
import { Icon } from "astro-icon/components"
import Image from "astro/components/Image.astro"
---

<section class="my-16">
  <H2>Experience</H2>
  <div class="grid lg:grid-cols-2 gap-4">
    {
      experiences.map((experience) => (
        <div class="grid grid-cols-5 gap-4">
          <div class="col-span-2 md:col-span-1 relative w-full aspect-square">
            <Image
              src={experience.organization.logo}
              alt={`${experience.organization.name} Logo`}
              class="block"
              sizes="100%"
              inferSize
              width={1000}
              height={1000}
            />
          </div>
          <div class="col-span-3 md:col-span-4 flex flex-col">
            <H3 className="text-xl font-bold">{experience.title}</H3>
            <div class="flex flex-col">
              <a
                href={experience.organization.url}
                target="_blank"
                class="flex items-center gap-2 hover:underline underline-offset-2 text-gray-300 hover:text-gray-100 transition-colors"
              >
                <p>
                  {experience.organization.name}{" "}
                  <Icon name={icons.Visit} class="inline" />
                </p>
              </a>
              <p>
                {experience.startDate} - {experience.endDate ?? "present"}
              </p>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>
