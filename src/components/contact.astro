---
import H2 from "@/components/ui/typography/H2.astro";
import { siteConfig } from "@/lib/config";
import { icons } from "@/lib/icons";
import { Icon } from "astro-icon/components";
import ContactForm from "@/components/contact/contact-form";
---

<section
  class="mt-16 py-16 bg-gradient-to-br from-gray-900/80 to-gray-900/40 rounded-2xl border border-gray-700"
>
  <div class="max-w-4xl mx-auto px-6">
    <div class="text-center mb-12">
      <H2>Hey there!</H2>
      <p class="text-gray-400 mt-4">
        Got a project in mind? Want to collaborate? Or just want to say hi?
      </p>
      <p class="text-gray-400">
        Drop me a message and I'll get back to you as soon as possible!
      </p>
    </div>
    <div class="flex flex-col gap-8">
      <div class="flex flex-wrap lg:justify-around gap-4">
        <div class="flex items-center gap-4">
          <div class="p-3 bg-gray-800 rounded-lg">
            <Icon name={icons.Envelope} size={24} class="text-gray-200" />
          </div>
          <div>
            <h3 class="font-medium">Email</h3>
            <p class="text-gray-400">deveeshshetty@gmail.com</p>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <a
            href={siteConfig.socials.github}
            target="_blank"
            aria-label="Visit GitHub profile"
            class="p-3 bg-gray-800 rounded-lg hover:bg-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-black"
          >
            <Icon name={icons.GitHub} size={24} class="text-gray-200" />
          </a>
          <div>
            <h3 class="font-medium">GitHub</h3>
            <p class="text-gray-400">{siteConfig.handles.github}</p>
          </div>
        </div>
        <div class="flex items-center gap-4">
          <a
            href={siteConfig.socials.linkedin}
            target="_blank"
            aria-label="Visit LinkedIn profile"
            class="p-3 bg-gray-800 rounded-lg hover:bg-gray-700 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-500 focus-visible:ring-offset-2 focus-visible:ring-offset-black"
          >
            <Icon name={icons.LinkedIn} size={24} class="text-gray-200" />
          </a>
          <div>
            <h3 class="font-medium">LinkedIn</h3>
            <p class="text-gray-400">{siteConfig.handles.linkedin}</p>
          </div>
        </div>
      </div>
      <div class="bg-gray-800/50 p-6 rounded-lg border border-gray-700">
        <ContactForm client:load />
      </div>
    </div>
  </div>
</section>
