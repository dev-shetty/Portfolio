---
import ProfileImg from "@/assets/images/Deveesh.jpg"
import Button from "@/components/ui/button"
import H1 from "@/components/ui/typography/H1.astro"
import { siteConfig } from "@/lib/config"
import { icons } from "@/lib/icons"
import { Icon } from "astro-icon/components"
import Image from "astro/components/Image.astro"
---

<main class="flex flex-col-reverse xl:flex-row items-center gap-16 my-16">
  <div class="flex flex-col gap-8">
    <div class="flex flex-col gap-4">
      <H1>Deveesh Shetty</H1>
      <div class="flex flex-col gap-4">
        <p>
          I am a Frontend Developer working with modern frontend libraries and
          frameworks, including React and Next.js. Skilled in translating design
          into responsive and interactive web interfaces.
        </p>
        <p>
          I love exploring new technologies, mess around with them, and build
          applications for fun. Developer by passion and artist by hobby.
        </p>
      </div>
    </div>
    <div class="flex items-center justify-between gap-4">
      <div class="flex gap-4 text-xl md:text-2xl">
        <a
          href={siteConfig.socials.github}
          target="_blank"
          class="hover:text-slate-300 transition-colors"
        >
          <Icon name={icons.GitHub} />
        </a>
        <a
          href={siteConfig.socials.linkedin}
          target="_blank"
          class="hover:text-slate-300 transition-colors"
        >
          <Icon name={icons.LinkedIn} />
        </a>
        <a
          href={siteConfig.socials.twitter}
          target="_blank"
          class="hover:text-slate-300 transition-colors"
        >
          <Icon name={icons.Twitter} />
        </a>
      </div>
      <Button client:load className="w-full py-2" asChild>
        <a
          href="Resume.pdf"
          download="Deveesh Resume.pdf"
          class="flex items-center gap-2"
        >
          <span>Resume</span>
          <Icon name={icons.Download} />
        </a>
      </Button>
    </div>
  </div>
  <div class="rounded-full">
    <Image src={ProfileImg} alt="Deveesh Profile" class="rounded-md" priority />
  </div>
</main>
