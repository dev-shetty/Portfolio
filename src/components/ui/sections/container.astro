---
import H2 from "@/components/ui/typography/H2.astro"

const { title } = Astro.props
---

<section class="my-24">
  <div
    class="flex justify-between items-center border-b border-gray-700 pb-2 mb-4"
  >
    <H2 className="border-none pb-0 mb-0">{title}</H2>
    <slot name="right-button" />
  </div>
  <div class="grid gap-4">
    <slot name="vertical-grid" />
  </div>
  <div class="grid md:grid-cols-2">
    <slot name="two-column" />
  </div>
  <slot />
</section>
