---
import Analytics from "@vercel/analytics/astro";
import { siteConfig } from "../config/site";
import Navbar from "@/components/navbar.astro";
import { Toaster } from "@/components/ui/toaster";
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
import Footer from "@/components/ui/sections/footer.astro";

interface Props {
  title: string;
  description: string;
  ogImage?: string;
  article?: {
    publishedTime: string;
    tags: string[];
    series?: string;
  };
}

const { title, description, ogImage, article } = Astro.props;
const currentPath = Astro.url.pathname;

import { generateBreadcrumbs } from "@/lib/breadcrumbs";

const breadcrumbData = generateBreadcrumbs({
  currentPath,
  title,
  isArticle: !!article,
});
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/svg+xml" href={siteConfig.logo} />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <ClientRouter />

    <title>{title}</title>
    <meta name="description" content={description} />
    {
      article?.tags && (
        <meta
          name="keywords"
          content={`${article.tags.join(", ")}, Deveesh Shetty, Frontend Developer, MERN Stack Developer, Deveesh`}
        />
      )
    }
    {
      !article?.tags && (
        <meta
          name="keywords"
          content="Deveesh Shetty, Frontend Developer, MERN Stack Developer, Deveesh"
        />
      )
    }
    <meta name="creator" content="dev-sheÃ¸tty" />
    <meta name="author" content="Deveesh Shetty" />
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={siteConfig.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content={siteConfig.name} />
    {ogImage && <meta property="og:image" content={ogImage} />}
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={siteConfig.name} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:url" content={siteConfig.url} />
    {ogImage && <meta name="twitter:image" content={ogImage} />}
    <meta name="twitter:creator" content="@ShettyDeveesh" />

    <meta
      name="theme-color"
      content="white"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="black"
      media="(prefers-color-scheme: dark)"
    />

    <link rel="shortcut icon" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <slot name="head" />

    <Analytics />

    {
      article && (
        <>
          <meta
            property="article:published_time"
            content={article.publishedTime}
          />
          {article.tags?.map((tag) => (
            <meta property="article:tag" content={tag} />
          ))}
          {article.series && (
            <meta property="article:section" content={article.series} />
          )}
        </>
      )
    }

    <!-- Breadcrumb Structured Data -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify(breadcrumbData)}
    />
  </head>
  <body class="text-gray-50">
    <a
      href="#main-content"
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-[var(--z-toast)] focus:bg-white focus:text-black focus:px-4 focus:py-2 focus:rounded-md focus:font-medium"
    >
      Skip to main content
    </a>
    <Navbar />
    <main id="main-content" class="py-24">
      <slot />
    </main>
    <Footer />
    <Toaster client:load />
  </body>
</html>
